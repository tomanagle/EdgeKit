{
	"name": "edgekit",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "wrangler dev",
		"deploy": "wrangler deploy",
		"build": "wrangler build",
		"auth:generate": "bun run types:generate && bunx @better-auth/cli generate --config src/auth.ts --output src/db/auth-schema.ts -y",
		"db:generate": "drizzle-kit generate",
		"generate": "bun run auth:generate && bun run db:generate",
		"db:migrate:local": "wrangler d1 migrations apply DB --local",
		"db:migrate:prod": "wrangler d1 migrations apply DB --remote",
		"db:studio": "drizzle-kit studio",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"types:generate": "wrangler types"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"drizzle-kit": "^0.31.8",
		"wrangler": "^4.53.0"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"better-auth": "^1.4.5",
		"drizzle-orm": "^0.45.0",
		"hono": "^4.0.0",
		"pino": "^10.1.0",
		"zod": "^4.3.2",
		"@hono/zod-validator": "^0.7.6"
	}
}
